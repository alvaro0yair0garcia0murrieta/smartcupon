<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sucursal">
    <select id="sucursales" resultType="modelo.pojo.Sucursal">
        SELECT*
        FROM sucursal;
    </select>
    <select id="sucursalesPromo" parameterType="int" resultType="modelo.pojo.Sucursal">
        SELECT nombre, calle, numero, codigoP, telefono
        FROM promo_sucu
                 INNER JOIN sucursal ON sucursal.idSucursal = promo_sucu.idSucu
        where idPromo = #{id}
    </select>
    <select id="sucursalesE" parameterType="int" resultType="modelo.pojo.Sucursal">
        SELECT*
        FROM sucursal
        where idEmpresa = #{idEmpresa};
    </select>
    <select id="busquedaPromocion" parameterType="int" resultType="modelo.pojo.Sucursal">
        SELECT*
        FROM promo_sucu
        WHERE idSucu = #{id}
    </select>
    <delete id="eliminar" parameterType="int">
        DELETE
        FROM `sucursal`
        WHERE `idSucursal` = #{idSucursal}
    </delete>
    <insert id="registrar" parameterType="modelo.pojo.Sucursal">
        INSERT INTO `sucursal`
        (`nombre`,
         `calle`,
         `numero`,
         `encargado`,
         `colonia`,
         `ciudad`,
         `telefono`,
         `codigoP`,
         `longitud`,
         `latitud`,
         `idEmpresa`)
        VALUES (#{nombre},
                #{calle},
                #{numero},
                #{encargado},
                #{colonia},
                #{ciudad},
                #{telefono},
                #{codigoP},
                #{longitud},
                #{latitud},
                #{idEmpresa});
    </insert>
    <update id="actualizar" parameterType="modelo.pojo.Sucursal">
        UPDATE `sucursal`
        SET `nombre`    = #{nombre},
            `calle`     = #{calle},
            `numero`    = #{numero},
            `encargado` = #{encargado},
            `colonia`   = #{colonia},
            `ciudad`    = #{ciudad},
            `telefono`  = #{telefono},
            `codigoP`   = #{codigoP},
            `longitud`  = #{longitud},
            `latitud`   = #{latitud},
            `idEmpresa` = #{idEmpresa}
        WHERE `idSucursal` = #{idSucursal};
    </update>
</mapper>