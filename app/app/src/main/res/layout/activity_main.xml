<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/editarB"
        android:layout_width="46dp"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/farmaciasB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promociones de Farmacias"
        android:textColor="#FFFFFF"
        android:background="#3F51B5"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editarB" />

    <Button
        android:id="@+id/cafeteriasB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FF4081"
        android:text="Promociones de CafeterÃ­as"
        android:textColor="#212121"
        app:layout_constraintTop_toBottomOf="@+id/farmaciasB"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/ComercialB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#4CAF50"
        android:text="Promociones de Centros Comerciales"
        android:textColor="#263238"
        app:layout_constraintTop_toBottomOf="@+id/cafeteriasB"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/irCupones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FF9800"
        android:text="Canjear Cupones"
        android:textColor="#424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ComercialB" />

</androidx.constraintlayout.widget.ConstraintLayout>
